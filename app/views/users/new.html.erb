

   <div class="main">
     <div class="container">
       <h1>Sign up for Air-Base</h1>
       
       <%= form_for(@user) do |f| %>
         <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: 'form-control' %>
         </div>

         <div class="form-group">
            <%= f.label :email %>
            <%= f.email_field :email, class: 'form-control' %>
         </div>
         <div class="form-group">
            <%= f.label :password %>
            <%= f.password_field :password, class: 'form-control' %>
         </div>
          <%= f.submit "Create Account", class: "btn" %>
        <% end %>
       
     </div>
   </div>
