<div class="container">
	<div class="page-header">
		<h1 class="signin"><%= @post.title %></h1>
		
	</div>
	<p class="bg-info"><h3 class="signin"><%= @post.body %></h3></p>
	<% @comments.each do | comment | %>
		<div class="panel panel-default">
	  		<div class="panel-body">
		  		<%= comment.body %>
		  		<br>
				<% if comment.user%>
					<strong>Posted by:</strong><%= comment.user.name %>
				<%else%>
					<strong>Posted by: </strong>Anonymous
				<% end %>
			</div>
			<%= link_to "Delete this post", :post, method: :delete, data: {confirm: "Are you sure you want to delete this bean?"} %>
		</div>
	<% end %>
	<%= render 'posts/comment_form' %>
</div>
